<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<h2 class="paddingLeft">Welcome, <%= accountData.account_firstname %></h2>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>

<a href="/account/update-account" class="accountManageLink paddingLeft">Update Account Information</a>

<% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin' ) { %>
    <div id="manager-account-management" class="paddingLeft">
        <h3>Inventory Management</h3>
        <a href="/inv/" class="accountManageLink"><p>Click here to manage</p></a>
    </div>
<% } %>
<div id="bottomSpace"></div>