<!-- Content Heading section -->
<% if (title) { %>
    <h1 id="login-h1"> <%- title %> </h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>

<form class="user-form" action="/account/login" method="post" id="login-form">
    <label for="account_email">Email:</label>
    <input type="email" name="account_email" placeholder="Enter your email..." required>
    <label for="account_password">Password:</label>
    <input title="Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character" type="password" name="account_password" placeholder="Enter your password..." required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <div id="login-button-div">
        <button type="submit">Login</button>
    </div>
    <p>Don't have an account? <a href="/account/registration">Sign Up</a></p>
</form>