<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>

<form action="/inv/add-inventory" method="post" class="user-form" id="add-inventory-form">
    <label for="classification_id">Classification:</label>
    <select name="classification_id" id="classification_id" required>
        <option selected>Select a Classification</option>
        <%- options %>
    </select>
    <label for="inv_make">Make:</label>
    <input type="text" name="inv_make" id="inv_make" required placeholder="Ex: Dodge" minlength="3">

    <label for="inv_model">Model:</label>
    <input type="text" name="inv_model" id="inv_model" required placeholder="Ex: Charger" minlength="3">

    <label for="inv_year">Year:</label>
    <input type="number" name="inv_year" id="inv_year" min="1900" required placeholder="Ex: 2004">

    <label for="inv_description">Description:</label>
    <textarea name="inv_description" id="inv_description"  required cols="30" rows="8"></textarea>

    <label for="inv_image">Image Path:</label>
    <input type="text" name="inv_image" id="inv_image" required placeholder="Ex: /images/vehicles/no-image.png">

    <label for="inv_thumbnail">Thumbnail Image Path:</label>
    <input type="text" name="inv_thumbnail" id="inv_thumbnail" required placeholder="Ex: /images/vehicles/no-image-tn.png">

    <label for="inv_price">Price:</label>
    <input type="number" name="inv_price" id="inv_price" step="0.01" min="0" required placeholder="Ex: 45000">

    <label for="inv_miles">Miles:</label>
    <input type="text" name="inv_miles" id="inv_miles" min="0" required placeholder="Ex: 160500">

    <label for="inv_color">Color:</label>
    <input type="text" name="inv_color" id="inv_color" required placeholder="Ex: Black" minlength="3">

    <button type="submit">Add Vehicle</button>
</form>