<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
<%  }) %>
    </ul>
<% } %>

<ul id="manage-links">
    <li>
        <a href="/inv/add-classification">Add new classification</a>
    </li>
    <li>
        <a href="/inv/add-inventory">Add new inventory</a>
    </li>
</ul>
<div id="manage-section">
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list</p>
    <select name="classification_id" id="classification_id" required>
        <option value="" disabled <%= (!locals.classification_id) ? ' selected' : '' %>>Select a Classification</option>
        <% options.forEach(option => { %>
            <option value="<%= option.value %>" <%= (option.value == locals.classification_id) ? 'selected' : '' %>>
                <%= option.label %>
            </option>
        <% }); %>
    </select>
    <table id="inventoryDisplay"></table>
</div>
<noscript>Javascript must be enabled to use this page.</noscript>
<script src="../../js/inventory.js"></script>